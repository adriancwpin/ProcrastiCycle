{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Procrastination Police",
    "action": {
        "default_popup": "index.html"
    },
    "background":{
        "service_worker": "background.js"
    },
    "permissions":[
        "tabs", 
        "storage", 
        "identity",
        "alarms",
        "activeTab",
        "webNavigation",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
