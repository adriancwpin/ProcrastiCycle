{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Procrastination Police",
    "action": {
        "default_popup": "index.html"
    },
    "background":{
        "service_worker": "background.js"
    },
    "permissions":[
        "tabs", 
        "storage", 
        "identity",
        "alarms",
        "activeTab",
        "webNavigation"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
